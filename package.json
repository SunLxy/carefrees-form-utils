{
  "name": "root",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "----@carefrees/form-util----": "--------start-------",
    "build": "npm run-script build --workspace @carefrees/form-util",
    "watch": "npm run-script watch --workspace @carefrees/form-util",
    "start:vue": "npm run-script start --workspace example_vue",
    "start:react": "npm run-script start --workspace example_react",
    "version": "lerna version --force-publish=* --no-changelog --no-git-tag-version --no-push",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "remove": "lerna exec \"rm -rf node_modules build  package-lock.json\"",
    "clean": "lerna clean --yes && npm run remove"
  },
  "dependencies": {
    "@carefrees/rslib": "~0.0.5",
    "husky": "~8.0.0",
    "lerna": "~5.4.0",
    "prettier": "~2.7.0",
    "pretty-quick": "~3.1.3",
    "lint-staged": "~13.0.0",
    "tsbb": "~4.2.5",
    "typescript": "~5.8.3"
  },
  "overrides": {
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7"
  },
  "resolutions": {
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7"
  },
  "lint-staged": {
    "*.{js,jsx,tsx,ts,less,md,json}": "prettier --write"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "core",
    "packages/*",
    "examples/*"
  ]
}